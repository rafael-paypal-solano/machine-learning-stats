#!/opt/anaconda3/bin/python3

#
# Pearson correlation test: test association between two quantitative variables
#

import numpy
import scipy.stats as stats
numpy.random.seed(seed=42)

n = 1000
x = numpy.random.normal(loc = 1.78, scale=0.5, size=n)

def report(m, thereshold):
    #
    # This is a two-sided test for the null hypothesis that the expected value (mean) of a sample of independent observations a is equal to the given population mean.
    # (http://benalexkeen.com/comparative-statistics-in-python-using-scipy/)
    # If p-value iis far less than the standard thresholds of 0.05 or 0.01, then we reject the null hypothesis and we can say 
    # there is a statistically significant difference between the sample mean and the population mean
    #
    tval, pval = stats.stats.ttest_1samp(x, m)
    reject = "REJECT H0 (difference)" if pval < thereshold else "DO NOT REJECT H0 (no difference)"
    print(m, tval, pval, reject)



report(0.5, 0.05)
report(1.77, 0.05)
report(1.775, 0.05)
report(1.78, 0.05)
report(1.785, 0.05)
report(2.5, 0.05)